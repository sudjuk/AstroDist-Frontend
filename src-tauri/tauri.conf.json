{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AstroDist",
  "version": "0.1.1",
  "identifier": "com.astrodist.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173/",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AstroDist",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/64x64.png",
      "icons/32x32.png"
    ]
  }
}


